<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>The Joel Hilton Film Collection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/Mission6_Thomas.styles.css" asp-append-version="true"/>
</head>
<body>

<header class="header">
    <div class="container header-container">
        <a href="/Home/index" class="logo">
            <span><i class="fa-solid fa-film"></i> The Joel Hilton Film Collection</span>
        </a>
        <nav class="nav">
            <a href="/Home/home" class="nav-link">Home</a>
            <a href="/Home/movieList" class="nav-link">Manage Collection</a>
            <a href="/Home/form" class="nav-link button button-primary">Enter a Movie</a>
        </nav>
    </div>
</header>

<div class="main-content">
    <main role="main">
        @RenderBody()
    </main>
</div>

<div class="footer">
    <div class="container">
        <p>Website built by Jake Thomas | (682)-402-5305 | jothomas713@gmail.com</p>
        <p>© 2024 The Joel Hilton Film Collection. All rights reserved.</p>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>